<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:custom="http://schemas.android.com/apk/res/com.chess">

    <style name="Button" parent="Text.Button">
        <item name="btn_radius">@dimen/rounded_button_radius</item>
        <item name="btn_is_solid">true</item>
        <item name="btn_padding">@dimen/rounded_button_padding_left</item>
        <item name="btn_bevel_lvl">1</item>
        <item name="btn_bevel_inset">1dip</item> <!--2px-->
        <item name="btn_is_rect">false</item>
        <item name="btn_outer_border">@color/semi_transparent_border</item>
        <item name="btn_use_border">true</item>
        <item name="btn_use_pressed_layer">false</item>
    </style>

    <!-- ================================= Orange Buttons ============================================= -->
    <style name="Button.Orange2">
        <item name="btn_bevel_lvl">2</item>

        <item name="btn_top">@color/orange_emboss_top_1</item>
        <item name="btn_left">@color/orange_emboss_left_1</item>
        <item name="btn_right">@color/orange_emboss_right_1</item>
        <item name="btn_bottom">@color/orange_emboss_bottom_1</item>

        <item name="btn_top_2">@color/orange_emboss_top_2</item>
        <item name="btn_left_2">@color/orange_emboss_left_2</item>
        <item name="btn_right_2">@color/orange_emboss_right_2</item>
        <item name="btn_bottom_2">@color/orange_emboss_bottom_2</item>

        <item name="btn_solid">@color/orange_button</item>
    </style>

    <style name="Button.OrangeNoBorder">
        <item name="btn_use_border">false</item>

        <item name="btn_top">@color/orange_emboss_top_1</item>
        <item name="btn_left">@color/orange_emboss_left_1</item>
        <item name="btn_right">@color/orange_emboss_right_1</item>
        <item name="btn_bottom">@color/orange_emboss_bottom_1</item>

        <item name="btn_solid">@color/orange_button</item>
    </style>

    <style name="Button.OrangeNoBorder.Small">
        <item name="btn_use_border">false</item>
        <item name="android:minHeight">@dimen/small_orange_button_height</item>
    </style>

    <style name="Button.Orange2.Small">
        <item name="android:minHeight">@dimen/small_orange_button_height</item>
    </style>

    <!--====================================== Glassy Buttons =========================================== -->
    <style name="Button.Glassy">
        <item name="btn_is_solid">true</item>
        <item name="btn_use_border">false</item>
        <item name="btn_is_glassy">true</item>
        <item name="btn_gradient_angle">TOP_BOTTOM</item>

        <item name="btn_top">@color/transparent_button_border_top</item>
        <item name="btn_left">@color/transparent_button_border_left</item>
        <item name="btn_right">@color/transparent_button_border_right</item>
        <item name="btn_bottom">@color/transparent_button_border_bottom</item>

        <item name="btn_solid">@color/glassy_button</item>

        <item name="btn_gradient_start">@color/transparent_button_border_left</item>
        <item name="btn_gradient_end">@color/transparent_button_border_top</item>

        <item name="android:minHeight">@dimen/grey_button_height</item>
        <item name="android:textColor">@color/new_light_grey</item>
        <item name="android:shadowColor">@null</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
    </style>

    <style name="Button.Glassy.Small">
        <item name="android:minHeight">@dimen/small_button_height</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--====================================== Grey Buttons =========================================== -->
    <style name="Button.Grey2Solid">
        <item name="btn_bevel_lvl">2</item>

        <item name="btn_top">@color/upgrade_plan_platinum_top_1</item>
        <item name="btn_left">@color/upgrade_plan_platinum_left_1</item>
        <item name="btn_right">@color/upgrade_plan_platinum_right_1</item>
        <item name="btn_bottom">@color/upgrade_plan_platinum_bottom_1</item>

        <item name="btn_top_2">@color/upgrade_plan_platinum_top_2</item>
        <item name="btn_left_2">@color/upgrade_plan_platinum_left_2</item>
        <item name="btn_right_2">@color/upgrade_plan_platinum_right_2</item>
        <item name="btn_bottom_2">@color/upgrade_plan_platinum_bottom_2</item>

        <item name="btn_solid">@color/upgrade_plan_platinum</item>

        <item name="android:minHeight">@dimen/grey_button_height</item>
    </style>

    <style name="Button.Grey2Solid.NoBorder">
        <item name="btn_use_border">false</item>
    </style>

    <style name="Button.Grey2Solid.NoBorder.Light">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--====================================== Blue Buttons =========================================== -->

    <!-- Facebook -->
    <style name="Button.Facebook">
        <item name="btn_bevel_lvl">2</item>
        <item name="btn_is_solid">false</item>
        <item name="btn_use_border">false</item>

        <item name="btn_top">@color/f_emboss_top_1</item>
        <item name="btn_left">@color/f_emboss_left_1</item>
        <item name="btn_right">@color/f_emboss_right_1</item>
        <item name="btn_bottom">@color/f_emboss_bottom_1</item>

        <item name="btn_top_2">@color/f_emboss_top_2</item>
        <item name="btn_left_2">@color/f_emboss_left_2</item>
        <item name="btn_right_2">@color/f_emboss_right_2</item>
        <item name="btn_bottom_2">@color/f_emboss_bottom_2</item>

        <item name="btn_gradient_start">@color/f_button_1</item>
        <item name="btn_gradient_end">@color/f_button_2</item>

        <item name="android:paddingLeft">@dimen/button_login_fb_left_padding</item> <!--TODO check-->
        <item name="color">@color/f_button_1</item>
        <item name="ttf">Bold</item>

    </style>
    <!-- ________________________________________________________________________ -->


    <style name="Button.Blue">
        <item name="btn_use_border">false</item>

        <item name="btn_top">@color/blue_emboss_top</item>
        <item name="btn_left">@color/blue_emboss_left</item>
        <item name="btn_right">@color/blue_emboss_right</item>
        <item name="btn_bottom">@color/blue_emboss_bottom</item>

        <item name="btn_solid">@color/blue_button</item>
    </style>

    <!-- Share -->
    <style name="Button.Blue.Light">
        <item name="btn_top">@color/share_emboss_top</item>
        <item name="btn_left">@color/share_emboss_left</item>
        <item name="btn_right">@color/share_emboss_right</item>
        <item name="btn_bottom">@color/share_emboss_bottom</item>

        <item name="btn_solid">@color/share_button</item>
    </style>


    <!--====================================== Green Buttons =========================================== -->

    <style name="Button.Green">
        <item name="btn_use_border">false</item>

        <item name="btn_top">@color/green_emboss_top_left</item>
        <item name="btn_left">@color/green_emboss_top_left</item>
        <item name="btn_right">@color/green_emboss_low_right</item>
        <item name="btn_bottom">@color/green_emboss_low_right</item>

        <item name="btn_solid">@color/green_button</item>
    </style>

    <style name="Button.Green.Light">
        <item name="btn_use_border">true</item>

        <item name="btn_top">@color/light_green_emboss_top_1</item>
        <item name="btn_left">@color/light_green_emboss_top_1</item>
        <item name="btn_right">@color/light_green_emboss_bot_2</item>
        <item name="btn_bottom">@color/light_green_emboss_bot_1</item>

        <item name="btn_solid">@color/light_green_button</item>
    </style>

    <!--====================================== Red Buttons =========================================== -->

    <style name="Button.Red">
        <item name="btn_use_border">false</item>

        <item name="btn_top">@color/red_emboss_top_1</item>
        <item name="btn_left">@color/red_emboss_top_2</item>
        <item name="btn_right">@color/red_emboss_bottom_2</item>
        <item name="btn_bottom">@color/red_emboss_bottom_1</item>

        <item name="btn_solid">@color/red_button</item>
    </style>

    <!--====================================== Brown Buttons =========================================== -->

    <style name="Button.Brown">
        <item name="btn_bevel_lvl">2</item>
        <item name="btn_use_border">false</item>

        <item name="btn_top">@color/upgrade_plan_gold_top_1</item>
        <item name="btn_left">@color/upgrade_plan_gold_left_1</item>
        <item name="btn_right">@color/upgrade_plan_gold_right_1</item>
        <item name="btn_bottom">@color/upgrade_plan_gold_bottom_1</item>

        <item name="btn_top_2">@color/upgrade_plan_gold_top_2</item>
        <item name="btn_left_2">@color/upgrade_plan_gold_left_2</item>
        <item name="btn_right_2">@color/upgrade_plan_gold_right_2</item>
        <item name="btn_bottom_2">@color/upgrade_plan_gold_bottom_2</item>

        <item name="btn_solid">@color/upgrade_plan_gold</item>
    </style>

    <!--====================================== White Buttons =========================================== -->

    <style name="Button.White">
        <item name="btn_top">@color/white_button_solid</item>
        <item name="btn_left">@color/white_button_solid</item>
        <item name="btn_right">@color/white_button_solid</item>
        <item name="btn_bottom">@color/white_button_solid</item>

        <item name="btn_solid">@color/white_button_solid</item>
    </style>

    <!--====================================== Rect Buttons =========================================== -->

    <style name="Rect" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/new_light_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/new_tab_button_height</item>
        <item name="ttf">Bold</item>

        <!--ButtonDrawable params-->
        <item name="btn_is_solid">true</item>
        <item name="btn_padding">@dimen/rounded_button_padding_left</item>
        <item name="btn_outer_border">@color/semi_transparent_border</item>
        <item name="btn_use_pressed_layer">false</item>

        <item name="btn_radius">0dip</item>
        <item name="btn_use_border">false</item>
        <item name="btn_bevel_lvl">1</item>
        <item name="btn_is_rect">true</item>

        <item name="btn_top">@color/transparent_button</item>
        <item name="btn_left">@color/transparent_button</item>
        <item name="btn_right">@color/transparent_button_border_right</item>
        <item name="btn_bottom">@color/transparent_button_border_bottom</item>

        <item name="btn_top_2">@color/transparent_button_border_top_2</item>
        <item name="btn_left_2">@color/transparent_button_border_left_2</item>
        <item name="btn_right_2">@color/transparent_button_border_right_2</item>
        <item name="btn_bottom_2">@color/transparent_button_border_bottom_2</item>

        <item name="btn_solid">@color/transparent_button</item>
    </style>

    <!-- ============= Top ===================== -->
    <style name="Rect.Top">
        <item name="btn_top">@color/transparent_button_border_left</item>
        <item name="btn_bottom">@color/transparent_button_border_bottom</item>
    </style>

    <style name="Rect.Top.Left">
        <item name="btn_rect_pos">topLeft</item>
    </style>

    <style name="Rect.Top.Middle">
        <item name="btn_rect_pos">topMiddle</item>
    </style>

    <style name="Rect.Top.Right">
        <item name="btn_rect_pos">topRight</item>
    </style>

    <!-- ============= Tab ===================== -->

    <style name="Rect.Tab">
        <item name="btn_top">@color/transparent_button_border_left</item>  <!--dark-->
        <item name="btn_bottom">@color/transparent_button_border_bottom</item> <!--dark-->
        <item name="btn_solid">#3300FF00</item>
    </style>

    <style name="Rect.Tab.Left">
        <item name="btn_rect_pos">tabLeft</item>
    </style>

    <style name="Rect.Tab.Middle">
        <item name="btn_rect_pos">tabMiddle</item>
    </style>

    <style name="Rect.Tab.Right">
        <item name="btn_rect_pos">tabRight</item>
    </style>

    <!-- ============= Bottom(Controls) ===================== -->
    <style name="Rect.Bottom">
        <item name="btn_rect_pos">bottomLeft</item>

        <item name="btn_top">@color/transparent_button_border_left</item>
        <item name="btn_bottom">@color/transparent_button_border_bottom</item>
    </style>

    <style name="Rect.Bottom.Left">
        <item name="btn_rect_pos">bottomLeft</item>
    </style>

    <style name="Rect.Bottom.Middle">
        <item name="btn_rect_pos">bottomMiddle</item>
    </style>

    <style name="Rect.Bottom.Right">
        <item name="btn_rect_pos">bottomRight</item>
    </style>

    <!-- ============= Colored Buttons ===================== -->
    <style name="Rect.Bottom.Right.Orange">
        <item name="btn_rect_pos">bottomRight</item>

        <item name="btn_solid">@color/orange_button_flat</item>
    </style>

    <style name="Rect.Bottom.Right.Red">
        <item name="btn_rect_pos">bottomRight</item>

        <item name="btn_solid">@color/red_button</item>
    </style>

    <style name="Rect.Bottom.Right.Green">
        <item name="btn_rect_pos">bottomRight</item>

        <item name="btn_solid">@color/light_green_button</item>
    </style>

    <!--====================================== List Items(can't be derived from Text or Button) =================== -->

    <style name="ListItem">
        <!--ButtonDrawable params-->
        <item name="btn_radius">0dip</item>
        <item name="btn_is_rect">true</item>
        <item name="btn_padding">@dimen/rounded_button_padding_left</item>
        <item name="btn_is_solid">true</item>
        <item name="btn_use_border">false</item>
        <item name="btn_bevel_lvl">1</item>
        <item name="btn_bevel_inset">1dip</item> <!--2px-->
        <item name="btn_use_pressed_layer">false</item>

        <item name="btn_rect_pos">listItem</item>

        <item name="btn_top">@color/transparent_button_border_left</item>
        <item name="btn_bottom">@color/transparent_button_border_bottom</item>

        <item name="btn_solid">@color/transparent_button</item>

        <item name="android:minHeight">@dimen/new_daily_games_item_height</item>
    </style>

    <style name="ListItem.Header">
        <item name="btn_solid">@color/glassy_button</item>

        <item name="android:minHeight">@dimen/new_daily_games_header_height</item>
    </style>

    <style name="ListItem.Header.Light">
        <item name="btn_solid">@color/header_light</item>
    </style>

    <style name="ListItem.Header.Dark">
        <item name="btn_solid">@color/header_dark</item>
    </style>





</resources>