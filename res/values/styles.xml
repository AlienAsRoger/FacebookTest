	<style name="SettingsDividerText" parent="Text">
		<item name="android:paddingTop">10dip</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="lineDivider" >
		<item name="android:layout_marginBottom">5dip</item>
	</style>

    <style name="PageRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:button">@drawable/empty</item>-->
        <item name="android:layout_margin">5dip</item>
        <item name="android:clickable">false</item>
        <item name="android:textSize">1sp</item>
        <!--<item name="android:background">@drawable/pager_indicator_selector</item>-->
    </style>

	<style name="LinearDescription">
		<item name="android:weightSum">10</item>
		<item name="android:paddingBottom">@dimen/default_linear_bottom_padding</item>
		<item name="android:paddingTop">@dimen/default_linear_top_padding</item>
		<item name="android:paddingLeft">@dimen/default_linear_left_padding</item>
		<item name="android:paddingRight">@dimen/default_linear_right_padding</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="LinearListItem" parent="ListItem">
		<item name="android:paddingLeft">15dip</item>
		<item name="android:paddingRight">15dip</item>
		<item name="android:minHeight">@dimen/default_list_item_height</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="SettingsListText">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">15sp</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="GamePanelButton">
		<item name="android:layout_weight">1</item>
	</style>

	<style name="CapturedPiece">
		<item name="android:layout_weight">1</item>
	</style>

	<style name="GameLabel">
		<item name="android:layout_centerVertical">true</item>
		<item name="android:textSize">@dimen/game_label_text_size</item>
		<item name="android:singleLine">true</item>
		<item name="android:paddingTop">@dimen/game_label_padding_top</item>
		<item name="android:paddingBottom">@dimen/game_label_padding_top</item>
	</style>

	<style name="GameLabel.Timer">
		<item name="android:drawablePadding">5dip</item>
		<item name="android:maxWidth">@dimen/player_name_max_width</item>
	</style>

	<style name="GameLabel.Player">
